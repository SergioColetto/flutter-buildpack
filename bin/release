#!/bin/sh

function print() {
  echo "-----> $1"
}

BUILD_DIR=${1:-}
PWD="$(pwd)"

print $BUILD_DIR
print $PWD

if [ -d $BUILD_DIR/build/web ]; then
    DEPLOY_DIR="/app/build/web/"
else
    DEPLOY_DIR="/app/"
fi

cat <<EOF
---
default_process_types:
    web: /app/dart-sdk/bin/dart pub global run dart_server_httpd

EOF
